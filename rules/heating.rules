rule "enable heating when valves open"
when
    Item Heatingvalve received update
then
    if (Heatingvalve.members.filter(s | s.state as DecimalType > 15).size > 0) {
      logInfo("heating.rules", "Aktiviere Heizung.")
      UG_Wirtschaftsraum_Therme.postUpdate(ON)
    } else {
      logInfo("heating.rules", "Deaktiviere Heizung.")
      UG_Wirtschaftsraum_Therme.postUpdate(OFF)
    }
end
